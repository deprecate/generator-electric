{namespace guide}

/**
 * @param page
 * @param site
 */
{template .render}
	{call main.render data="all"}
		{param elementClasses: 'docs' /}
		{param content kind="html"}
			{call Sidebar.render}
				{param section: $site.index.children['docs'] /}
			{/call}

			{call .guide data="all" /}
		{/param}
	{/call}
{/template}

/**
 * @param page
 * @param site
 * @param content
 */
{template .guide}
	<div class="sidebar-offset">
		<header class="guide-header">
			<div class="container-hybrid">
				<h1 class="guide-header-title">{$page.title} Guide</h1>
			</div>
		</header>

		<div class="container-hybrid">
			<div class="docs-guide row">
				<div class="docs-content col-xs-16 col-md-10 col-lg-offset-1 col-lg-9">
					{$content}

					{if $site.githubRepo}
						{call .contribute data="all" /}
					{/if}
				</div>

				<nav class="col-xs-16 col-md-offset-1 col-md-5 col-lg-4">
					<div class="docs-nav-container">
						{call AffixedReadingProgress.render}
							{param elementClasses: 'docs-nav topbar-is-fixed' /}
							{param offsetTop: 200 /}
						{/call}
					</div>
				</nav>
			</div>
		</div>
	</div>
{/template}

/**
 * @param page
 * @param site
 */
{template .contribute}
	<div class="guide-github">
		<div class="guide-github-img">
			<span class="icon-16-github"></span>
		</div>
		<div class="guide-github-text">
			<p>Contribute on Github! <a href="https://github.com/{$site.githubRepo}/tree/master/{$page.srcFilePath}" class="docs-github-link" target="_blank">Edit this section</a>.</p>
		</div>
	</div>
{/template}
